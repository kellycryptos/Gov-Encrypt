{
  "name": "gov-encrypt-monorepo",
  "private": true,
  "workspaces": [
    "frontend/nextjs-app",
    "programs/*",
    "backend/arcium-relayer"
  ],
  "scripts": {
    "build": "npm run build -w frontend/nextjs-app",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "validator": "docker compose up -d"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}